{
  "buildCommand": "cd frontend && npm install --production=false && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && npm install --production=false",
  "build": {
    "env": {
      "VITE_API_URL": "@vite_api_url"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
